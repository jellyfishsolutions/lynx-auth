<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card-group mb-0">
                <div class="card p-4">
                    <div class="card-body">
                        <h1>{{ "auth_label_login" | tr}}</h1>
                        <p class="text-muted">{{ "auth_label_signin_with_your_account" | tr}}</p>
                        <form method="POST" action="{{route('auth_perform_login')}}">
                            <div class="input-group mb-3">
                                <span class="input-group-addon">
                                    <i class="icon-user"></i>
                                </span>
                                <input type="text" name="email" class="form-control" value="{{old('email')}}" placeholder="{{ 'auth_placeholder_email' | tr }}">
                            </div>
                            <div class="input-group mb-4">
                                <span class="input-group-addon">
                                    <i class="icon-lock"></i>
                                </span>
                                <input type="password" name="password" class="form-control" value="{{old('password')}}" placeholder="{{ 'auth_placeholder_password' | tr }}">
                            </div>
                            <div class="input-group md-4">
                                {% for error in errors %}
                                <div class="alert alert-danger" role="alert">
                                    {{error.message | tr | capitalize}}
                                </div>
                                {% endfor %}
                                {% if loginError %}
                                <div class="alert alert-danger" role="alert">
                                    {{"auth_std_login_error" | tr}}
                                </div>
                                {% endif %}
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <button type="submit" class="btn btn-primary px-4">{{ "auth_button_login" | tr }}</button>
                                </div>
                                <div class="col-6 text-right">
                                    <a href="{{route('auth_forgot_password')}}" class="btn btn-link px-0">{{ "auth_label_forgot_password" | tr }}</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
